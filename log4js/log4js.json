{
  "appenders": {
    "common": {
      "type": "dateFile",
      "filename": "./log/app.log",
      "pattern": "-yyyy-MM-dd",
      "maxLogSize": 10485760,
      "backups": 10,
      "alwaysIncludePattern": true
    },
    "common2": {
      "type": "console"
    }
  },
  "categories": {
    "default": {
      "appenders": ["common", "common2"], "level": "info" } }
}
